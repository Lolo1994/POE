@model IEnumerable<Task_2.Models.DiasterAllocation>

@{
    ViewData["Title"] = "Index";
}

<h1>View</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Disaster
            </th>
            <th>
                Date Allocated
            </th>
            <th>
                Amount Allocated
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.disasterType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dateAlloted)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.amountAllotted)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
    
</table>
